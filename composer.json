{
  "name": "rajandangi/wp-gh-release-updater",
  "description": "A self-contained, zero-configuration GitHub Release Updater Manager for WordPress plugins",
  "type": "library",
  "keywords": [
    "wordpress",
    "plugin",
    "github",
    "updater",
    "release",
    "auto-update",
    "composer"
  ],
  "homepage": "https://github.com/rajandangi/wp-gh-release-updater",
  "license": "GPL-2.0-or-later",
  "authors": [
    {
      "name": "Rajan Dangi",
      "email": "rajandangi@example.com",
      "homepage": "https://github.com/rajandangi"
    }
  ],
  "support": {
    "issues": "https://github.com/rajandangi/wp-gh-release-updater/issues",
    "source": "https://github.com/rajandangi/wp-gh-release-updater"
  },
  "require": {
    "php": ">=8.3"
  },
  "require-dev": {
    "phpunit/phpunit": "^9.0",
    "squizlabs/php_codesniffer": "^3.7",
    "wp-coding-standards/wpcs": "^3.0",
    "phpcsstandards/phpcsutils": "^1.0",
    "rector/rector": "^1.0",
    "phpstan/phpstan": "^1.10",
    "szepeviktor/phpstan-wordpress": "^1.3",
    "phpstan/extension-installer": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "WPGitHubReleaseUpdater\\": "src/"
    }
  },
  "minimum-stability": "stable",
  "prefer-stable": true,
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true,
      "phpstan/extension-installer": true
    }
  },
  "scripts": {
    "test": "phpunit",
    "phpcs": "phpcs --standard=phpcs.xml",
    "phpcbf": "phpcbf --standard=phpcs.xml",
    "phpstan": "phpstan analyse --memory-limit=1G",
    "phpstan-baseline": "phpstan analyse --memory-limit=1G --generate-baseline",
    "rector": "rector process --dry-run",
    "rector-fix": "rector process",
    "biome:check": "npm run biome:check",
    "biome:fix": "npm run biome:check:write",
    "qa": [
      "@phpcs",
      "@phpstan",
      "@rector",
      "@biome:check"
    ],
    "fix": [
      "@phpcbf",
      "@rector-fix",
      "@biome:fix"
    ]
  }
}